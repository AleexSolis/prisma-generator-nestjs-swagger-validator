generator client {
  provider = "prisma-client-js"
}

generator custom_generator {
  provider = "node ../../node_modules/prisma-generator-nestjs-swagger-validator"
  output   = "../types"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/// crud
model User {
  id    Int    @id @default(autoincrement())
  /// email
  email String @unique
  /// readonly
  dob   DateTime?
  /// positive
  age  Int?
  role Role
}

model Profile {
  id        Int    @id @default(autoincrement())
  /// length (3,50)
  firstName String
  lastName  String
  userId    String
}

enum NotificationType {
  newPosts
  newComments
  newFollowers
  reply
  heartOnPost
  heartOnComment
  heartOnReply
}

enum Language {
  Typescript
  Javascript
  Rust
  Go
  Python
  Cpp
}

enum Role {
  CLIENT
  ADMIN
}
